<h1>Add a new dose to <%= @cocktail.name %></h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :ingredient_id, as: :select, collection: @ingredients %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Back", cocktail_path(@cocktail), class: "btn btn-primary"%>
